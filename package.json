{
  "name": "lnxjs",
  "version": "0.7.4",
  "description": "Lynx Library",
  "author": "Daniel Moya",
  "workspaces": [
    "packages/*",
    "sandbox"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dmoyadev/lnx"
  },
  "type": "module",
  "scripts": {
    "dev": "pnpm ---filter \"sandbox\" dev",
    "create-component": "node scripts/create-component/create-component.js",
    "build": "pnpm -r build",
    "version": "pnpm -r version",
    "check-typing": "vue-tsc --noEmit && eslint --fix",
    "check-deps": "npx npm-check -u",
    "create-release": "pnpm build && pnpm publish --filter \"lnxjs-*\"",
    "release:patch": "pnpm version patch && pnpm create-release",
    "release:minor": "pnpm version minor && pnpm create-release",
    "release:major": "pnpm version major && pnpm create-release",
    "docs:dev": "vitepress dev --port 9998",
    "docs:build": "vitepress build"
  },
  "devDependencies": {
    "@types/node": "24.3.0",
    "@vitejs/plugin-vue": "6.0.1",
    "@vue/eslint-config-typescript": "14.6.0",
    "auto-changelog": "^2.5.0",
    "eslint": "9.34.0",
    "eslint-plugin-vue": "10.4.0",
    "postcss": "^8.5.6",
    "sass": "1.92.0",
    "typescript": "5.9.2",
    "vite": "7.1.7",
    "vitepress": "1.6.4",
    "vitepress-plugin-group-icons": "1.6.3",
    "vue": "3.5.21",
    "vue-tsc": "3.0.6"
  },
  "engines": {
    "node": ">=22.7.0",
    "pnpm": ">=9.4.0",
    "npm": "please-use-pnpm",
    "yarn": "please-use-pnpm"
  }
}
